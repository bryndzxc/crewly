APP_NAME=Crewly
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Demo environment
# Max age (in days) before demo companies are expired/disabled by the demo:cleanup command.
CREWLY_DEMO_MAX_DAYS=7

# Employee Portal onboarding
# If set, newly auto-created employee portal users will use this password.
# Recommended: do not use a shared password in production.
CREWLY_EMPLOYEE_DEFAULT_PASSWORD=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=crewly
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp

# Local dev default (Mailpit)
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Gmail SMTP (production option)
# 1) Set: MAIL_MAILER=gmail
# 2) Set: MAIL_FROM_ADDRESS to your Gmail / Workspace email
# 3) Use an App Password (not your normal password)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Zoho SMTP (production option)
# 1) Set: MAIL_MAILER=zoho
# 2) Set: MAIL_FROM_ADDRESS to your Zoho email
# 3) Fill in ZOHO_MAIL_* below (these avoid collisions with globally-set MAIL_* env vars)
# ZOHO_MAIL_HOST=smtp.zoho.com
# ZOHO_MAIL_PORT=587
# ZOHO_MAIL_ENCRYPTION=tls
# ZOHO_MAIL_USERNAME=your-email@yourdomain.com
# ZOHO_MAIL_PASSWORD=your-app-password

MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Brevo (Sendinblue) Transactional Email via HTTP API
# Set MAIL_MAILER=brevo to use this transport.
BREVO_API_KEY=
# Optional overrides
BREVO_ENDPOINT=https://api.brevo.com/v3/smtp/email
BREVO_TIMEOUT=10
# Optional: set to a logging channel name from config/logging.php (e.g. stack, single)
BREVO_LOG_CHANNEL=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Reverb (WebSockets). Set BROADCAST_DRIVER=reverb to enable.
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_SERVER_PATH=

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
